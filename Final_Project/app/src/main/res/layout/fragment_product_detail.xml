<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#8C837B"
    tools:context=".fragment.ProductDetailFragment">

    <ImageView android:id="@+id/img_avatar_product"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_product"
        android:layout_marginTop="90dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TextView android:id="@+id/tv_name_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="10dp"/>

        <TextView android:id="@+id/tv_price_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá tiền"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="10dp"/>

        <EditText android:id="@+id/edt_number_of_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_email_edittext"
            android:drawablePadding="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:hint="Số lượng"/>

        <TextView android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng cộng"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_marginTop="20dp"/>

        <ImageView android:id="@+id/img_cart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_shopping_cart"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>